<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#90CAF9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button_spotify"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#F08C35" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="SCORES APP"
        android:id="@+id/button_scores"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_spotify"
        android:layout_centerHorizontal="true"
        android:background="#F08C35" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="LIBRARY APP"
        android:id="@+id/button_library"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_scores"
        android:layout_centerHorizontal="true"
        android:background="#F08C35" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button_build_it_bigger"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_library"
        android:layout_centerHorizontal="true"
        android:background="#F08C35" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="XYZ READER"
        android:id="@+id/button_xyz_reader"
        android:layout_below="@+id/button_build_it_bigger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#F08C35" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/button_my_own_app"
        android:layout_below="@+id/button_xyz_reader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#B71C1C" />
</RelativeLayout>
